<div align="center">
  <h1>Products</h1>
  <% @products.each do |product| %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
          <div class="product-title">
            <%= link_to product.title, product_path(product) %>
          </div>
          <div class="product-body">
            <%= truncate(product.description, length: 100) %>
          </div>
          <%= link_to 'Edit product', edit_product_path(product), class: "btn btn-xs btn-primary" %>
          <%= link_to 'Delete this product', products_path(product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" }, class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>

  </table>
</div>
