<h1>Products</h1>

<p><%= link_to "Create new article", new_product_path %></p>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.description %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %> </td>
    <td><%= link_to 'Show', product_path(product) %> </td>
  </tr>

  <% end %>

</table>
