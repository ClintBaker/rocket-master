<h2 align="center"><%= @product.title%></h2>

<div class="well col-xs-8 col-xs-offset-2 center">
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr />
  <%= simple_format(@product.description) %>
  <div class="product-actions">
    <%= link_to 'Edit product', edit_product_path(@product), class: "btn btn-xs btn-primary" %>
    <%= link_to 'Delete this product', products_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" }, class: "btn btn-xs btn-danger" %>
    <%= link_to 'View all products', products_path, class: "btn btn-xs btn-success" %>
  </div>
</div>
