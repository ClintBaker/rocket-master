<h1 align="center">Rocket Users</h1>

<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="well col-md-4 col-md-offset-4">
        <li class="product-title">
          <%= link_to user.username, user_path(user) %>
        </li>
          <% if user.products.count > 0 %>
          <li>
            <small>Official Rocket Vendor: Offering <%= pluralize(user.products.count, "product") %></small>
          </li>
          <% end %>
      </div>
    </ul>
  <% end %>
</div>
