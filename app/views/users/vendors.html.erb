<h1 align="center">Rocket Vendors</h1>

<div align="center">
  <% will_paginate %>
  <% @users.each do |user| %>
    <% if user.products.count > 0 %>
      <div class="row">
        <ul class="listing">
          <div class="well col-md-4 col-md-offset-4">
            <li class="product-title">
              <%= link_to user.username, user_path(user) %>
            </li>
            <li>
              <small>Offering <%= pluralize(user.products.count, "product") if user.products %></small>
            </li>
          </div>
        </ul>
      </div>
    <% end %>
  <% end %>
  <% if @users.count > 5 %>
  <% will_paginate %>
  <% end %>
</div>
