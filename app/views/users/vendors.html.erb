<h1 align="center">Rocket Vendors</h1>

<div align="center">
  <% @users.each do |user| %>
  <% if user.products.count > 0 %>
    <ul class="listing">
      <div class="well col-md-4 col-md-offset-4">
        <li class="product-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li>
          <small>Offering <%= pluralize(user.products.count, "product") if user.products %></small>
        </li>
      </div>
    </ul>
    <% end %>
  <% end %>
</div>
